                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rangkuman Produk"
                    android:padding="15dp"
                    android:background="#e5e5e5"
                    android:textSize="16sp"
                    android:textStyle="bold" />

